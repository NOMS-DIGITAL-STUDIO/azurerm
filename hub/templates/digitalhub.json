{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "digitalhub_databaseAccount_name": {
            "type": "String"
        },
        "digitalhub_storageAccount_name": {
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "comments": "NoSQL Database for Hub",
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "kind": "MongoDB",
            "name": "[parameters('digitalhub_databaseAccount_name')]",
            "apiVersion": "2015-04-08",
            "location": "UK West",
            "tags": {},
            "properties": {
                "databaseAccountOfferType": "Standard",
                "consistencyPolicy": {
                    "defaultConsistencyLevel": "Session",
                    "maxIntervalInSeconds": 5,
                    "maxStalenessPrefix": 100
                }
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Storage account for the Hub.",
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_GRS",
                "tier": "Standard"
            },
            "kind": "BlobStorage",
            "name": "[parameters('digitalhub_storageAccount_name')]",
            "apiVersion": "2016-01-01",
            "location": "ukwest",
            "tags": {},
            "properties": {
                "accessTier": "Hot"
            },
            "resources": [],
            "dependsOn": []
        }
    ]
}